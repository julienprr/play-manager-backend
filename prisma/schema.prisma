generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                          String   @id @default(cuid())
  spotifyUserId               String   @unique
  email                       String   @unique
  username                    String
  spotifyAccessToken          String?  @unique
  spotifyAccessTokenTimestamp DateTime?
  spotifyRefreshToken         String?  @unique

  favoritePlaylists           String[] // IDs des playlists favorites Spotify
  autoSortPlaylists           String[] // IDs des playlists Ã  trier automatiquement
}
